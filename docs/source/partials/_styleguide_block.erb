<h6 id="section-<%= @section.section %>" class="divider section-header leader-2">
  <a href="#section-<%= @section.section %>"><%= @section.section %> <i><%= @section.filename %></i></a>
  <a href="#" class="right">Back To Top</a>
</h6>

<div class="styleguide-description">
  <%= @description %>
  <% if @section.modifiers.any? %>
    <!--<h3 class="modifiers-header">Modifiers</h3>-->
    <ul class="styleguide-modifier-list">
      <% @section.modifiers.each do |modifier| %>
        <li><code><%= modifier.name %></code> - <%= modifier.description %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="styleguide-modifiers">
  <% if @example_html %>
  <div class="styleguide-modifier-example">
    <%= @example_html.gsub('$modifier_class', "") %>
    <code class="modifier-name">default</code>
  </div>
  <% if @section.modifiers.any? %>
    <% @section.modifiers.each do |modifier| %>
      <div class="styleguide-modifier-example">
        <%= @example_html.gsub('$modifier_class', "#{modifier.class_name}") %>
        <code class="modifier-name"><%= modifier.name %></code>
      </div>
    <% end %>
  <% end %>
<% end %>
</div>

<% if @example_html %>
  <pre class="styleguide-element styleguide-sample"><code class="html"><%= strip_whitespace_for_pre @example_html.gsub(' $modifier_class', "").gsub('$modifier_class', "").gsub(' class=""', "") %></code></pre>
<% end%>
